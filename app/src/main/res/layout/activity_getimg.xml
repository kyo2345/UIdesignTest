<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:background="@color/black"
    android:layout_centerInParent="true"
    tools:context=".Getimg">
<TextView
    android:paddingBottom="8dp"
    android:id="@+id/tv"
    android:textSize="20dp"
    android:layout_centerInParent="true"
    android:textColor="@color/white"
    android:text="업로드할 이미지 선택"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <View
        android:id="@+id/lineview"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv"/>
        <Button
            android:onClick="btnpic"
            android:background="#00ff0000"
            android:id="@+id/pic"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="사진 찍기"
            android:layout_below="@+id/lineview"
            android:layout_width="85dp"
            android:layout_height="match_parent" />
        <View
            android:layout_toRightOf="@+id/pic"
            android:id="@+id/lineview2"
            android:background="@color/red"
            android:layout_below="@+id/lineview"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <Button
            android:onClick="btnalbum"
            android:background="#00ff0000"
            android:id="@+id/album"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/lineview2"
            android:layout_below="@+id/lineview"
            android:text="앨범에서 선택"
            android:layout_width="85dp"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/lineview3"
            android:background="@color/red"
            android:layout_toRightOf="@+id/album"
            android:layout_below="@+id/lineview"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <Button
            android:onClick="btncancel"
            android:background="#00ff0000"
            android:gravity="center"
            android:layout_toRightOf="@+id/lineview3"
            android:layout_below="@+id/lineview"
            android:id="@+id/canel"
            android:text="취소"
            android:textColor="@color/white"
            android:layout_width="85dp"
            android:layout_height="match_parent" />

</RelativeLayout>